<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <com.mutualmobile.android.sampleui.BackgroundIntersectedView
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent">


        <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <ImageButton
                    app:srcCompat="@drawable/ic_left_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
            />

            <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Workruit"
                    android:textColor="#fff"
                    android:padding="16dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:letterSpacing="0.3"
                    android:layout_height="wrap_content"/>

            <ImageButton
                    app:srcCompat="@drawable/ic_magnifying_glass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Borderless"
            />
        </LinearLayout>

        <include
                android:layout_below="@+id/toolbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                layout="@layout/layout_job_profile"
                android:id="@+id/job_profile"
        />

        <RelativeLayout
                android:layout_below="@+id/job_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="40dp"
                android:paddingBottom="62dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                tools:context=".MainActivity">

            <com.yuyakaido.android.cardstackview.CardStackView
                    android:id="@+id/cardStackView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
            />

        </RelativeLayout>

        <include
                layout="@layout/layout_bottom_action_buttons"
                android:id="@+id/btn_group_bottom_actions"
                android:layout_marginBottom="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
        />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>