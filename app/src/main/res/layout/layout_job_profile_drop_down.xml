<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are looking at"
            android:textColor="#fff"
            android:layout_marginLeft="16dp"
            android:textSize="10sp"
            android:id="@+id/label_job_profile"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:id="@+id/textSelectedJobProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Android Developer"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/label_job_profile"
            app:layout_constraintRight_toLeftOf="@+id/changeProfile"
            app:layout_constraintTop_toBottomOf="@+id/label_job_profile"
    />

    <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/changeProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            app:srcCompat="@drawable/ic_arrow_down"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textSelectedJobProfile"
            app:layout_constraintBottom_toBottomOf="@+id/textSelectedJobProfile"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
    />

    <View
            android:id="@+id/separator"
            android:paddingStart="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/textSelectedJobProfile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textSelectedJobProfile"
            android:layout_width="0dp"
            android:background="@color/white"
            android:visibility="gone"
            android:alpha="0.7"
            android:layout_height="0.6dp"/>

    <com.mutualmobile.android.sampleui.customViews.JobProfileDropDownList
            android:id="@+id/job_profile_dropdown"
            app:layout_constraintTop_toBottomOf="@+id/separator"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </com.mutualmobile.android.sampleui.customViews.JobProfileDropDownList>
</android.support.constraint.ConstraintLayout>