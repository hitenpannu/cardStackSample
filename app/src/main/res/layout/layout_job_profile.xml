<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are looking at"
            android:textColor="#fff"
            android:layout_marginLeft="16dp"
            android:textSize="10sp"
            android:id="@+id/label_job_profile"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:id="@+id/textSelectedJobProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Android Developer"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/label_job_profile"
            app:layout_constraintRight_toLeftOf="@+id/changeProfile"
            app:layout_constraintTop_toBottomOf="@+id/label_job_profile"
    />

    <TextView
            android:id="@+id/changeProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:textColor="#fff"
            android:textSize="12sp"
            android:paddingTop="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_job_profile"
    />

    <com.mutualmobile.android.sampleui.customViews.JobProfileSelectionMini
            app:layout_constraintTop_toBottomOf="@+id/changeProfile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </com.mutualmobile.android.sampleui.customViews.JobProfileSelectionMini>
</android.support.constraint.ConstraintLayout>